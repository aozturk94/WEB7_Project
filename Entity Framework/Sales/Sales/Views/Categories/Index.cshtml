@model List<Category>

@{
    ViewData["Title"] = "Category List";
}

<h3 class="display-3">Category List</h3>
<hr />
@if (Model.Count() != 0)
{
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.CategoryId</td>
                    <td>@category.CategoryName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{ <p class="display-4">GEÇERLİ BİR KAYIT YOK!</p>}
