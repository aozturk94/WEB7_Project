@model List<Product>

    <div class="row">
        <div class="col-md-12">
            <h6 class="display-4">
                Admin Product Manager
            </h6>
            <hr />
            <a href="/admin/products/create" class="btn btn-sm btn-primary">Create Product</a>
            <table class="table table-bordered mt-3">
                <thead>
                    <tr>
                        <th width="30">
                            ID
                        </th>
                        <th width="100">
                            Image
                        </th>
                        <th>
                            Name
                        </th>
                        <th width="30">
                            Price
                        </th>
                        <th width="20">
                            Home
                        </th>
                        <th width="20">
                            Approved
                        </th>

                        <th width="140">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if(Model.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                    <tr>
                        <td>
                            @item.ProductId
                        </td>
                        <td>
                            <img src="/images/@item.ImgUrl" class="img-fluid" width="80" />
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Price
                        </td>
                        <td>
                            @if (item.IsHome)
                            {
                                <i class="fa-solid fa-circle-check text-success"></i>
                            }
                            else
                            {
                                <i class="fa-solid fa-circle-xmark text-danger"></i>
                            }
                        </td>
                        <td>
                            @if (item.IsApproved)
                            {
                                <i class="fa-solid fa-circle-check text-success"></i>
                            }
                            else
                            {
                                <i class="fa-solid fa-circle-xmark text-danger"></i>
                            }
                        </td>
                        <td>
                            <a href="/admin/product/@item.ProductId" class="btn btn-sm btn-primary mr-2">Edit</a>
                            <form action="/" method="post" class="d-inline">
                                <input type="hidden" name="productId" value="@item.ProductId"/>
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                        }
                    }
                    else
                    {
                        //Buraya ürün olmadığında yapılacaklar gelecek
                    }
                </tbody>
            </table>
        </div>
    </div>