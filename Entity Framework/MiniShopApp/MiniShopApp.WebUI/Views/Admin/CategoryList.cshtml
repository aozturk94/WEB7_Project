@model List<Category>

<div class="row">
    <div class="col-md-12">
        <h6 class="display-4">Admin Category Managament</h6>
        <hr />
        <a href="/admin/categories/create" class="btn btn-sm btn-primary">Create Category</a>
        <table class="table table-bordered mt-2">
            <thead>
                <tr>
                    <th width="30">ID</th>
                    <th >Name</th>
                    <th >Description</th>
                    <th >Url</th>
                    <th width="130">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    @foreach (var category in Model)
                    {
                <tr>
                    <td>@category.CategoryId</td>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td>@category.Url</td>
                    <td>
                        <a href="/admin/categories/@category.CategoryId" class="btn btn-sm btn-primary mr-1">Edit</a>
                        <form action="/Admin/CategoryDelete" method="post" class="d-inline">
                            <input type="hidden" name="categoryId" value="@category.CategoryId" />
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
                    }
                }
                else
                {
                    //Ürün olmadığında yapılacak işlem
                }

            </tbody>
        </table>
    </div>
</div>