@model ProductModel

<h1 class="display-4">
    Create Product
</h1>
<hr />
<form asp-controller="Admin" asp-action="ProductCreate" method="post">
    <div class="row">
        <div class="col-md-8">
            <div class="form-group row mb-2">
                <label class="col-sm-3 col-form-label">
                    Name
                </label>
                <div class="col-sm-9">
                    <input type="text" asp-for="Name" class="form-control" />
                </div>
            </div>

            <div class="form-group row mb-2">
                <label class="col-sm-3 col-form-label">
                    Url
                </label>
                <div class="col-sm-9">
                    <input type="text" asp-for="Url" class="form-control" />
                </div>
            </div>

            <div class="form-group row mb-2">
                <label class="col-sm-3 col-form-label">
                    Description
                </label>
                <div class="col-sm-9">
                    <input type="text" asp-for="Description" class="form-control" />
                </div>
            </div>

            <div class="form-group row mb-2">
                <label class="col-sm-3 col-form-label">
                    ImgUrl
                </label>
                <div class="col-sm-9">
                    <input type="text" asp-for="ImgUrl" class="form-control" />
                </div>
            </div>

            <div class="form-group row mb-2">
                <label class="col-sm-3 col-form-label">
                    Price
                </label>
                <div class="col-sm-9">
                    <input type="text" asp-for="Price" class="form-control" />
                </div>
            </div>

            <div class="form-group row mb-2">
                <div class="col-sm-9">
                    <button type="submit" class="btn btn-success">Save Product</button>
                </div>
            </div>

        </div>

        <div class="col-md-4">
            @foreach (var item in (List<Category>)ViewBag.Categories)
            {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" name="categoryIds" value="@item.CategoryId" id="category_@item.CategoryId"/>
                    <label class="form-check-label">@item.Name</label>
                </div>
            }
            <hr />
            <div class="form-check">
                <input type="checkbox" asp-for="IsApproved" class="form-check-input" />
                <label class="form-check-label">Is Approved?</label>
            </div>
            <div class="form-check">
                <input type="checkbox" asp-for="IsHome" class="form-check-input" />
                <label class="form-check-label">Is Home?</label>
            </div>
        </div>
    </div>
</form>
