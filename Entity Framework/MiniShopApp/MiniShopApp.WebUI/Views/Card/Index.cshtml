@model CardModel

    <h6 class="display-4">Shopping Cart</h6>
    <hr />
@if (Model.CardItems.Count() == 0)
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-warning">
                Sepetinizde ürün yoktur!
            </div>
        </div>
    </div>
}
else 
{
    <div class="row">
        <div class="col-md-8">
            <div class="">
                <h6>Cart Items</h6>
                <table class="table table-sm table-hover">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cardItem in Model.CardItems)
                        {
                            <tr>
                                <td>
                                    <img src="~/img/@cardItem.ImageUrl" width="50"/>
                                </td>
                                <td>@cardItem.Name</td>
                                <td>@cardItem.Price</td>
                                <td>@cardItem.Quantity</td>
                                <td>@(cardItem.Price*cardItem.Quantity)</td>
                                <td>
                                    <form asp-controller="Card" asp-action="DeleteFromCart" method="post">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fa-solid fa-trash-can"></i>
                                        </button>
                                        <input name="productId" value="@cardItem.ProductId" type="hidden"/>
                                    </form>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-4">
            <div>
                <h6>Cart Summary</h6>
            </div>
            <table class="table table-sm">
                <tbody>
                    <tr>
                        <th>Cart Total:</th>
                        <td>@Model.TotalPrice().ToString("c")</td>
                    </tr>
                    <tr>
                        <th>Shipping:</th>
                        <td>Free</td>
                    </tr>
                    <tr>
                        <th>Order Total:</th>
                        <td>@Model.TotalPrice().ToString("c")</td>
                    </tr>
                </tbody>
            </table>

            <div>
                <a href="/" class="btn btn-primary"><i class="fa-solid fa-basket-shopping"></i> Continue Shopping</a>
                <a href="/checkout" class="btn btn-warning"><i class="fa-solid fa-credit-card"></i> Check Out</a>
            </div>
        </div>
    </div>
}