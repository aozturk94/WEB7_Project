@model Kitaplar

@{
    ViewData["Title"] = "Edit";
}

<h1 class="display-3">@Model.Ad Düzenle</h1>
<hr>
<div class="row">
    <div class="col-sm-6">
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="Isbn" class="control-label">ISBN</label>
                <input type="text" asp-for="Isbn" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Ad" class="control-label">Kitap</label>
                <input type="text" asp-for="Ad" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="SayfaSayisi" class="control-label">Sayfa Sayısı</label>
                <input type="text" asp-for="SayfaSayisi" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Stok" class="control-label">Stok Miktarı</label>
                <input type="text" asp-for="Stok" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="TurlerId" class="control-label">Tür</label>
                <select asp-for="TurlerId" asp-items="ViewBag.Tür" class="form-select form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="YazarlarId" class="control-label">Yazar</label>
                <select asp-for="YazarlarId" asp-items="ViewBag.Yazar" class="form-select form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="YayinEvleriId" class="control-label">Yayınevi</label>
                <select asp-for="YayinEvleriId" asp-items="ViewBag.Yayınevi" class="form-select form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Değişikleri Kaydet" class="btn btn-outline-success">
                <a class="btn btn-primary" asp-action="Index">Kitaplara Dön</a>
            </div>
        </form>
    </div>

</div>