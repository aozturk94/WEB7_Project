@model EF_Code.Models.Turler

@{
    ViewData["Title"] = "Kitap Türü Silme";
}

<h1 class="display-4">Kitap Türü Sil</h1>
<div class="row">
    <div class="col-sm-3">
        Tür ID:
    </div>
    <div class="col-sm-5">
        @Model.Id
    </div>
</div>
<div class="row">
    <div class="col-sm-3">
        Kitap Türü:
    </div>
    <div class="col-sm-5">
        @Model.TurAd
    </div>
</div>
<a class="btn btn-primary" asp-action="Index">Kitap Türlerine Dön</a>
<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id">
    <input type="submit" value="Sil" class="btn btn-danger">
</form>