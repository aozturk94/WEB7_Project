                <input type="text" asp-for="EgitimDurumu" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="CezaDurumu" class="control-label"></label>
                <input type="text" asp-for="CezaDurumu" class="form-control">
            </div>
            <div class="form-group">
                <input type="submit" value="Değişikleri Kaydet" class="btn btn-outline-success">
            </div>
        </form>
    </div>

</div>