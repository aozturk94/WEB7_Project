            </div>
            <div class="form-group">
                <label asp-for="Tel" class="control-label"></label>
                <input type="text" asp-for="Tel" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Mail" class="control-label"></label>
                <input type="text" asp-for="Mail" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="UyelikTarihi" class="control-label"></label>
