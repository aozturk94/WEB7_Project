@model EF_CodeFirst.Models.Entities.Book

@{
    ViewData["Title"] = "New Book";
}

<h1 class="display-3">Add New Book</h1>
<hr>
<div class="row">
    <div class="col-sm-6">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="BookName" class="control-label"></label>
                <input type="text" asp-for="BookName" class="form-control">
                <br>
                <label asp-for="BookYearOfPublication" class="control-label"></label>
                <input type="text" asp-for="BookYearOfPublication" class="form-control">
                <br>
                <label asp-for="BookYearOfPublication" class="control-label"></label>
                <input type="text" asp-for="BookYearOfPublication" class="form-control">
                <br>
                <label asp-for="BookEditionNumber" class="control-label"></label>
                <input type="text" asp-for="BookEditionNumber" class="form-control">
                <br>
                <label asp-for="BookQuantity" class="control-label"></label>
                <input type="text" asp-for="BookQuantity" class="form-control">
                <br>
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <br>
                <label asp-for="AuthorId" class="control-label"></label>
                <select asp-for="AuthorId" class="form-control" asp-items="ViewBag.AuthorId"></select>
                <br>
                <label asp-for="AuthorId" class="control-label"></label>
                <select asp-for="AuthorId" class="form-control" asp-items="ViewBag.AuthorId2"></select>
                <br>
                <label asp-for="PublisherId" class="control-label"></label>
                <select asp-for="PublisherId" class="form-control" asp-items="ViewBag.PublisherId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-success">
                <a class="btn btn-primary" asp-action="Index">Back to Books Page</a>
            </div>
        </form>
    </div>

</div>