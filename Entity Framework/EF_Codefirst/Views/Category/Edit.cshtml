@model EF_CodeFirst.Models.Entities.Category

@{
    ViewData["Title"] = "Edit";
}

<h1 class="display-3">Edit @Model.CategoryName</h1>
<hr>
<div class="row">
    <div class="col-sm-6">
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input type="text" asp-for="CategoryName" class="form-control">
                <br>
                <label asp-for="CategoryDescription" class="control-label"></label>
                <input type="text" asp-for="CategoryDescription" class="form-control">
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="CategoryId">
                <input type="submit" value="Save Changes" class="btn btn-outline-success">
                <a class="btn btn-primary" asp-action="Index">Back to Categories Page</a>
            </div>
        </form>
    </div>
</div>