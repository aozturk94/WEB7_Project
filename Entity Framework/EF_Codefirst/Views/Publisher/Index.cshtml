@model List<Publisher>

@{
    ViewData["Title"] = "Publisher";
}

<h1 class="display-3">Publisher</h1>
<a class="btn btn-sm btn-success" asp-action="Create">Add New Publisher</a>
<a class="btn btn-sm btn-outline-danger" asp-action="GetDeletedPublisher">Deleted Publisher</a><hr>
<table class="table table-sm table-dark w-50">
    <thead class="bg-primary">  
        <tr>
            <th>#</th>
            <th>ID</th>
            <th>Name</th>
            <th>City</th>
            <th>Process</th>
        </tr>
    </thead>
    <tbody>
        @{int a = 0;}
        @foreach (var publisher in Model)
        {

            <tr>
                <td>
                    @{a++;}
                    @a
                </td>
                <td>
                    @publisher.PublisherId
                </td>
                <td>
                    @publisher.PublisherName
                </td>
                <td>
                    @publisher.PublisherCity
                </td>
                <td>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@publisher.PublisherId">Details</a>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@publisher.PublisherId">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@publisher.PublisherId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
