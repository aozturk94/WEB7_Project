@model Publisher

@{
    ViewData["Title"] = "Edit";
}

<h1 class="display-3">Edit @Model.PublisherName </h1>
<hr>
<div class="row">
    <div class="col-sm-6">
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="PublisherName" class="control-label"></label>
                <input type="text" asp-for="PublisherName" class="form-control">
                <br>
                <label asp-for="PublisherCity" class="control-label"></label>
                <input type="text" asp-for="PublisherCity" class="form-control"> 
                <br>
                <label asp-for="PublisherMail" class="control-label"></label>
                <input type="text" asp-for="PublisherMail" class="form-control">
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="PublisherId">
                <input type="submit" value="Save Changes" class="btn btn-outline-success">
                <a class="btn btn-primary" asp-action="Index">Back to Publishers Page</a>
            </div>
        </form>
    </div>
</div>