@model Author

@{
    ViewData["Title"] = "Delete Author";
}

<h1 class="diplay-4">Delete @Model.AuthorName @Model.AuthorSurname</h1>
<div class="row">
    <div class="col-sm-3">
        #
    </div>
    <div class="col-sm-5">
        @Model.AuthorId
    </div>
</div>
<div class="row">
    <div class="col-sm-3">
        Name:
    </div>
    <div class="col-sm-5">
        @Model.AuthorName
    </div>
</div><div class="row">
    <div class="col-sm-3">
        Surname:
    </div>
    <div class="col-sm-5">
        @Model.AuthorSurname
    </div>
</div>
<div class="row">
    <div class="col-sm-3">
        Date of Birth:
    </div>
    <div class="col-sm-5">
        @Model.AuthorDateofBirth
    </div>
</div>
<hr>
<form asp-action="Delete">
    <input type="hidden" asp-for="AuthorId">
    <input type="submit" value="Delete" class="btn btn-danger">
    <a class="btn btn-primary" asp-action="Index">Back to Authors</a>
</form>