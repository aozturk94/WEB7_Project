@model Author

@{
    ViewData["Title"] = "Edit";
}

<h1 class="display-3">Edit @Model.AuthorName @Model.AuthorSurname </h1>
<hr>
<div class="row">
    <div class="col-sm-6">
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="AuthorName" class="control-label"></label>
                <input type="text" asp-for="AuthorName" class="form-control">
                <br>
                <label asp-for="AuthorSurname" class="control-label"></label>
                <input type="text" asp-for="AuthorSurname" class="form-control"> 
                <br>
                <label asp-for="AuthorDateofBirth" class="control-label"></label>
                <input type="text" asp-for="AuthorDateofBirth" class="form-control">
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="AuthorId">
                <input type="submit" value="Save Changes" class="btn btn-outline-success">
                <a class="btn btn-primary" asp-action="Index">Back to Authors Page</a>
            </div>
        </form>
    </div>
</div>