@model List<Category>

@{
    ViewData["Title"] = "Kategori Listesi";
}

<h1>Kategori List</h1>
<table class="table table-dark table-hover">
    <tr>
        <td>
            ID
        </td>
        <td>
            Category Name
        </td>
        <td>
            Category Descriptions
        </td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryId</td>
            <td>@item.CategoryName</td>
            <td>@item.CategoryDescription</td>
        </tr>
    }
</table>